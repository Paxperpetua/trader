
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container mt-5">
    <div class="text-center my-3">
      <h2>Log in customers/sessions</h2>
    </div>
    <div class="row mb-3 justify-content-md-center mt-5">
      <div class="col-form-label col-sm-2">
        <%= f.label :email, for: "exampleInputEmail1" %>
      </div>
      <div class="col-sm-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3 justify-content-md-center">
      <div class="col-form-label col-sm-2">
        <%= f.label :password, for: "password" %>
      </div>
      <div class="col-sm-5">
        <%= f.password_field :password, autofocus: true, autocomplete: "password", 
                              class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="row mb-3 justify-content-md-center">
        <div class="col-form-label col-sm-2">
          <%= f.label :remember_me %>
        </div>
        <div class="col-sm-5">
          <%= f.check_box :remember_me %>
        </div>
      </div>
    <% end %>

    <div class="row mb-3 justify-content-md-center mt-5">
      <div class="col-sm-3">
        <%= f.submit "Log in", class: "btn btn-success" %>
      </div>
    </div>
  </div
<% end %>

<%= render "customers/shared/links" %>
